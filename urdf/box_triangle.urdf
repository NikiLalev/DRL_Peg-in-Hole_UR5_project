<?xml version="1.0"?>
<robot name="hole_box">

  <!-- Link representing the hole box with triangular hole sides of ~0.52 (you get it when you enclose a equilateral triangle inside a circle of diameter 0.6) -->
  <link name="hole_box_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
        <mesh filename="/urdf/triangle.stl" scale="1 1 1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/> 
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
        <mesh filename="/urdf/triangle.stl" scale="1 1 1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.005" ixy="0.0" ixz="0.0"
          iyy="0.005" iyz="0.0"
          izz="0.005"/>
    </inertial>

  </link>

</robot>
